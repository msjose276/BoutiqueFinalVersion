<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:background="@color/colorPrimary"
    android:id="@+id/rl_adapter_featured"
    >

    <de.hdodenhof.circleimageview.CircleImageView
        app:civ_border_width="0dp"
        android:id="@+id/ci_profile_image"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/user_general_image"
        android:onClick="EditPicture"
        android:layout_margin="@dimen/dimension_10"
        />
    <TextView
        android:id="@+id/tv_boutique_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tia Zita"
        android:textSize="15dp"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:layout_below="@+id/iv_item_image"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/dimension_10"
        android:layout_toRightOf="@+id/ci_profile_image"

        />
    <TextView
        android:id="@+id/tv_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="maianga, Luanda"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:layout_below="@+id/tv_boutique_name"
        android:layout_toRightOf="@+id/ci_profile_image"
        />

    <TextView
        android:id="@+id/tv_item_posted"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="123"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:layout_alignParentRight="true"
        android:layout_margin="@dimen/dimension_10"
        android:padding="5dp"
        android:background="@drawable/border_for_search_bar"
        />



</RelativeLayout>